{
  "name": "@espcom/esbuild-plugin-webpack-analyzer",
  "author": "espcom",
  "license": "MIT",
  "version": "0.0.2",
  "description": "Webpack Bundle Analyzer integration for esbuild",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esbuild-plugins-community/esbuild-plugin-webpack-analyzer.git"
  },
  "scripts": {
    "prepare": "husky",
    "build": "rm -rf ./dist&&tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json&&echo '{\"type\": \"module\"}' > dist/esm/package.json",
    "prepublishOnly": "pnpm run build",
    "analyze:js": "eslint --ignore-path ./.formatignore --ext \".js,.ts\" ./",
    "format:js": "eslint --ignore-path ./.formatignore --ext \".js,.ts\" --fix",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "webpack-bundle-analyzer": "4.9.1"
  },
  "devDependencies": {
    "@types/node": "20.3.1",
    "esbuild": "0.23.1",
    "dk-eslint-config": "3.4.5",
    "lint-staged": "15.2.9",
    "typescript": "5.5.4",
    "husky": "9.1.5"
  },
  "peerDependencies": {
    "esbuild": "^0.23.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    "types": "./dist/types/index.d.ts",
    "require": "./dist/cjs/index.js",
    "import": "./dist/esm/index.js",
    "default": "./dist/esm/index.js"
  },
  "main": "dist/cjs/index.js",
  "types": "dist/types/index.d.ts",
  "packageManager": "pnpm@8.6.3"
}
